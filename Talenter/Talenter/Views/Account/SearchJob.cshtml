            <button class="btn btn-danger">Paso</button>
        </div>

        <div class="empresa-dato col-lg-4">
            <div class="roundBox">
                @Html.LabelFor(x => x.ID_EMPRESA, htmlAttributes: new { @class = "control-label col-md-2" })

