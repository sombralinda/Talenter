                <div>
                    @Html.EditorFor(x => x.NOMBRE, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(x => x.NOMBRE, "", new { @class = "text-danger" })
                </div>

                @Html.LabelFor(x => x.ABOUT, htmlAttributes: new { @class = "control-label col-md-2" })
                <div>
                    @Html.EditorFor(x => x.ABOUT, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(x => x.ABOUT, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="aplicar col-lg-4">
            <button class="btn btn-success">Aplicar</button>
        </div>
    </div>
  </div>